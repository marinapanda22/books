<%= form_for @book.notices.build do |f| %>
    <% if notice.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(notice.errors.count, "error") %> prohibited this notice from being saved:</h2>

          <ul>
            <% notice.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <div class="field">
      <%= f.hidden_field :book_id, value: @book.id %>
    </div>
    <div class="field">
      <%= f.hidden_field :user_id, value: @current_user.id %>
    </div>

    <div>
      Mark:  <%= f.select(:rating, options_for_select(1..5)) %>
    </div>
    <div class="field">
      <%= f.text_area :body %>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
